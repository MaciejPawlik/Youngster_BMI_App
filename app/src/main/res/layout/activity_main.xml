<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<Switch
			android:text="@string/gender"
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:id="@+id/gender"
			android:textOff="@string/GIRL" android:textOn="@string/BOY" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:switchPadding="10dp"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/age"/>
	<EditText
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberDecimal"
			android:id="@+id/age"
			android:layout_marginStart="16dp"
			android:layout_marginLeft="16dp" app:layout_constraintStart_toEndOf="@+id/gender"
			android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
	<EditText
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberDecimal"
			android:id="@+id/weight"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/gender" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/height"/>
	<EditText
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberDecimal"
			android:id="@+id/height"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintStart_toEndOf="@+id/weight" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/gender" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"/>
	<Button
			android:text="@string/go"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/weight"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>