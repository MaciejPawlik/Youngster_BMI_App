<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">

    <RadioGroup
            android:text="@string/gender"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderRadioGroup"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toStartOf="@+id/ageRadioGroup">

        <RadioButton
                android:text="@string/Girl"
                android:checked="true"
                android:hint="@string/GIRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GIRL"
                android:layout_weight="1"/>

        <RadioButton
                android:text="@string/Boy"
                android:hint="@string/BOY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BOY"
                android:layout_weight="1"/>
    </RadioGroup>

    <RadioGroup
            android:text="@string/age"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageRadioGroup"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/genderRadioGroup"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">

        <RadioButton
                android:text="@string/age"
                android:onClick="toggleAgeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monthYears"
                android:layout_weight="1"
                android:checked="true"/>

        <RadioButton
                android:text="@string/birthDate"
                android:onClick="toggleAgeInput"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/birthDate"
                android:layout_weight="1"/>

    </RadioGroup>

    <EditText
            android:hint="@string/name"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:id="@+id/childName"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@+id/genderRadioGroup"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/childName"
            android:id="@+id/linearLayoutBirth"
            android:visibility="gone">

        <TextView
                android:text="@string/labelBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/pickedDate"/>

        <TextView
                android:text="@string/initialBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickedDate"
                android:baselineAligned="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/datePicker"/>

        <Button
                android:text="@string/changeBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:onClick="showDatePickerDialog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pickedDate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutAge"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutBirth"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

        <TextView
                android:text="@string/labelAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelAge"
                android:baselineAligned="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/year"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                app:layout_constraintStart_toEndOf="@+id/labelAge"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/month"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/month"
                android:baselineAligned="false"
                app:layout_constraintStart_toEndOf="@+id/year"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
            android:hint="@string/weight"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:id="@+id/weight"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAge"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/height"
            android:importantForAutofill="no"/>

    <EditText
            android:hint="@string/height"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:id="@+id/height"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAge"
            app:layout_constraintStart_toEndOf="@+id/weight"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"/>

    <Button
            android:text="@string/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculate"
            android:onClick="calculateCentile"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BMI"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/calculate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/centileWeight"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/BMI"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/centileHeight"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/centileWeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/centileBmi"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/centileHeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/centileBmi"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>