<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<RadioGroup
			android:text="@string/gender"
			android:orientation="horizontal"
			android:layout_width="376dp"
			android:layout_height="30dp"
			android:id="@+id/gender"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/year"
	>
		<RadioButton
				android:text="@string/Girl"
				android:hint="@string/GIRL"
				android:layout_width="wrap_content"
				android:checked="true"
				android:layout_height="wrap_content" android:id="@+id/GIRL" android:layout_weight="1"/>
		<RadioButton
				android:text="@string/Boy"
				android:hint="@string/BOY"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/BOY" android:layout_weight="1"/>
	</RadioGroup>
	<EditText
			android:hint="@string/year"
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberSigned"
			android:id="@+id/year"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/gender" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/month"/>
	<EditText
			android:hint="@string/month"
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberSigned"
			android:id="@+id/month"
			android:layout_marginTop="16dp"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintStart_toEndOf="@+id/year" app:layout_constraintTop_toBottomOf="@+id/gender"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
	<EditText
			android:hint="@string/weight"
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberDecimal"
			android:id="@+id/weight"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/year"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/height"
			app:layout_constraintStart_toStartOf="parent"/>
	<EditText
			android:hint="@string/height"
			android:layout_width="130dp"
			android:layout_height="60dp"
			android:inputType="numberDecimal"
			android:id="@+id/height"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintStart_toEndOf="@+id/weight" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/year" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"/>
	<Button
			android:text="@string/go"
			android:layout_width="wrap_content"
			android:layout_height="46dp"
			android:id="@+id/button"
			android:onClick="actionCentile"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/weight"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/BMI" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/centileWeight" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/BMI" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/centileHeight" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/centileWeight" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/centileBmi" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/centileHeight" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>